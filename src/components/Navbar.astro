<script>
  import lottie from 'lottie-web';
  import animationData from '../assets/Day and Night Toggle.json';

  // Theme Toggle Logic
  const themeToggleBtn = document.getElementById('theme-toggle');
  
  // Initialize Lottie
  let anim: any = null;
  if (themeToggleBtn) {
    anim = lottie.loadAnimation({
      container: themeToggleBtn,
      renderer: 'svg',
      loop: false,
      autoplay: false,
      animationData: animationData
    });
  }

  // Handle Initial State
  const element = document.documentElement;
  const currentTheme = localStorage.getItem("theme") || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
  
  // Assuming 150 frames total. 
  // 0-75: Day -> Night
  // 75-150: Night -> Day
  // Or linear: 0 = Day, 150 = Night.
  // Let's assume standard toggle behavior: 0->50% is ON, 50%->100% is OFF.
  // Day (Light) = 0 (or end of loop)
  // Night (Dark) = 75 (Midpoint)
  
  if (anim) {
    const setInitialState = () => {
      // 0 = Night (Moon)
      // 75 = Day (Sun)
      if (currentTheme === 'dark') {
        anim.goToAndStop(0, true); // Go to Night state (Frame 0 is safe)
      } else {
        anim.goToAndStop(75, true); // Go to Day state
      }
    };

    // Set immediately if possible
    setInitialState();

    // Ensure it renders when data is ready (fixes initial invisibility)
    anim.addEventListener('data_ready', setInitialState);
    
    // Backup for DOM readiness
    anim.addEventListener('DOMLoaded', setInitialState);
  }

  const handleToggleClick = () => {
    element.classList.toggle("dark");
    const isDark = element.classList.contains("dark");
    localStorage.setItem("theme", isDark ? "dark" : "light");

    if (anim) {
      if (isDark) {
        // Play Light -> Night (75 to 150)
        anim.playSegments([75, 150], true);
      } else {
        // Play Night -> Light (0 to 75)
        anim.playSegments([0, 75], true);
      }
    }
  }

  themeToggleBtn?.addEventListener("click", handleToggleClick);

  // Language Toggle Logic
  const langBtns = document.querySelectorAll('.lang-btn');
  
  // Initialize active state based on stored preference
  const currentLang = localStorage.getItem('language') || 'en';
  langBtns.forEach(btn => {
    if (btn.getAttribute('data-lang') === currentLang) {
      btn.classList.add('active');
    } else {
      btn.classList.remove('active');
    }
  });

  langBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const lang = btn.getAttribute('data-lang');
      if (!lang) return;

      // Update UI
      langBtns.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      
      // Save and Dispatch
      localStorage.setItem('language', lang);
      window.dispatchEvent(new CustomEvent('language-changed', { detail: lang }));
    });
  });

  // Mobile Menu Logic
  const mobileMenu = document.getElementById('mobile-menu');
  const navLinks = document.querySelector('.nav-links');

  if (mobileMenu && navLinks) {
    mobileMenu.addEventListener('click', () => {
      mobileMenu.classList.toggle('is-active');
      navLinks.classList.toggle('active');
    });
  }

  // Active link highlighting
  const sections = document.querySelectorAll('section');
  const navLi = document.querySelectorAll('.nav-links li a');

  window.addEventListener('scroll', () => {
    let current = '';
    sections.forEach((section) => {
      const sectionTop = section.offsetTop;
      const sectionHeight = section.clientHeight;
      if (pageYOffset >= sectionTop - sectionHeight / 3) {
        const id = section.getAttribute('id');
        if (id) current = id;
      }
    });

    navLi.forEach((li) => {
      li.classList.remove('active');
      const href = li.getAttribute('href');
      if (href && href.includes(current)) {
        li.classList.add('active');
      }
    });
  });
</script>

<style>
  .navbar {
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    padding: 0.75rem 0;
    position: fixed;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
    width: 100%;
    max-width: 100%;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.05);
  }

  .navbar:hover {
    box-shadow: 0 4px 25px rgba(0, 0, 0, 0.08);
  }

  :global(.dark) .navbar {
    background: rgba(9, 0, 64, 0.9);
    border-bottom: 1px solid rgba(177, 59, 255, 0.1);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.2);
  }

  :global(.dark) .navbar:hover {
    box-shadow: 0 4px 25px rgba(177, 59, 255, 0.15);
  }

  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    text-decoration: none;
    font-weight: 700;
    transition: transform 0.3s ease;
  }

  .logo:hover {
    transform: scale(1.02);
  }

  .logo-icon {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--accent-primary) 0%, var(--accent-secondary) 100%);
    border-radius: 10px;
    font-size: 1.1rem;
    font-weight: 800;
    color: #fff;
    box-shadow: 0 4px 12px rgba(139, 92, 246, 0.3);
  }

  :global(.dark) .logo-icon {
    box-shadow: 0 4px 12px rgba(177, 59, 255, 0.4);
  }

  .logo-text {
    font-size: 1.15rem;
    color: var(--text-color);
    letter-spacing: -0.5px;
  }

  .logo-accent {
    color: var(--accent-primary);
  }

  .nav-links {
    list-style: none;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    margin: 0;
    padding: 0;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 0.3rem;
    padding: 0.5rem 1rem;
    color: var(--text-muted);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9rem;
    border-radius: 50px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .nav-link::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    opacity: 0;
    border-radius: 50px;
    transition: opacity 0.3s ease;
    z-index: -1;
  }

  .nav-link:hover {
    color: var(--text-color);
    background: rgba(139, 92, 246, 0.08);
  }

  :global(.dark) .nav-link:hover {
    background: rgba(177, 59, 255, 0.15);
  }

  .nav-link:hover::before {
    opacity: 0;
  }

  .nav-link.active {
    color: #fff;
    background: transparent;
  }

  .nav-link.active::before {
    opacity: 1;
  }

  .nav-link.active .nav-text {
    position: relative;
    z-index: 1;
  }

  .nav-indicator {
    display: none;
  }

  .nav-divider {
    width: 1px;
    height: 24px;
    background: linear-gradient(180deg, transparent, var(--text-muted), transparent);
    opacity: 0.3;
    margin: 0 0.5rem;
  }

  .lang-switch {
    display: flex;
    align-items: center;
    gap: 0.15rem;
    background: rgba(0, 0, 0, 0.04);
    padding: 0.2rem;
    border-radius: 50px;
  }

  :global(.dark) .lang-switch {
    background: rgba(255, 255, 255, 0.05);
  }

  .lang-btn {
    background: transparent;
    border: none;
    cursor: pointer;
    font-family: 'Poppins', sans-serif;
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--text-muted);
    padding: 0.3rem 0.6rem;
    border-radius: 50px;
    transition: all 0.3s ease;
  }

  .lang-btn:hover {
    color: var(--text-color);
  }

  .lang-btn.active {
    background: var(--accent-primary);
    color: #fff;
    box-shadow: 0 2px 8px rgba(139, 92, 246, 0.3);
  }

  :global(.dark) .lang-btn.active {
    box-shadow: 0 2px 8px rgba(177, 59, 255, 0.4);
  }

  .theme-toggle {
    background: rgba(0, 0, 0, 0.04);
    border: none;
    cursor: pointer;
    padding: 0;
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    border-radius: 50%;
    transition: all 0.3s ease;
    margin-left: 0.25rem;
  }

  :global(.dark) .theme-toggle {
    background: rgba(255, 255, 255, 0.05);
  }

  .theme-toggle:hover {
    background: rgba(139, 92, 246, 0.1);
    transform: rotate(15deg);
  }

  .menu-toggle {
    display: none;
    flex-direction: column;
    cursor: pointer;
    padding: 0.5rem;
    gap: 5px;
  }

  .bar {
    height: 2.5px;
    width: 24px;
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
    border-radius: 10px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @media (max-width: 900px) {
    .navbar {
      width: 100%;
      max-width: 100%;
      top: 0;
      padding: 0.6rem 0;
      border-radius: 0;
    }

    .container {
      padding: 0 1rem;
    }

    .nav-link {
      padding: 0.4rem 0.8rem;
      font-size: 0.85rem;
    }
  }

  @media (max-width: 768px) {
    .menu-toggle {
      display: flex;
    }

    .nav-links {
      display: flex;
      flex-direction: column;
      position: absolute;
      top: calc(100% + 0.75rem);
      left: 50%;
      transform: translateX(-50%) translateY(-20px);
      width: 92%;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      padding: 1.5rem;
      gap: 0.5rem;
      border-radius: 24px;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
      border: 1px solid rgba(255, 255, 255, 0.3);
      opacity: 0;
      visibility: hidden;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      z-index: -1;
    }

    :global(.dark) .nav-links {
      background: rgba(9, 0, 64, 0.95);
      border: 1px solid rgba(177, 59, 255, 0.2);
    }

    .nav-links.active {
      opacity: 1;
      visibility: visible;
      transform: translateX(-50%) translateY(0);
    }

    .nav-link {
      width: 100%;
      justify-content: center;
      padding: 0.75rem 1rem;
      font-size: 0.95rem;
    }

    .nav-divider {
      width: 60%;
      height: 1px;
      margin: 0.5rem auto;
      background: linear-gradient(90deg, transparent, var(--text-muted), transparent);
    }

    .menu-toggle.is-active .bar:nth-child(1) {
      transform: translateY(7.5px) rotate(45deg);
    }

    .menu-toggle.is-active .bar:nth-child(2) {
      opacity: 0;
      transform: scaleX(0);
    }

    .menu-toggle.is-active .bar:nth-child(3) {
      transform: translateY(-7.5px) rotate(-45deg);
    }
  }
</style>